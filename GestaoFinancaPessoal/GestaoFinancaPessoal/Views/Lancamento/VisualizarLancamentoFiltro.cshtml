@model GestaoFinancaPessoal.ViewModels.VisualizarLancamentoViewModel

@{
    VisualizarLancamentoViewModel VisualizarLancamentoViewModel = ViewBag.VisualizarLancamentoViewModel as VisualizarLancamentoViewModel;
}


<div class="collapse @(VisualizarLancamentoViewModel != null ? "show":"")" id="collapseExample">
    <div class="card card-body">
        <div class="row">
            <form asp-action="Busca" class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-2">
                    <label asp-for="@VisualizarLancamentoViewModel.DataInicial" class="control-label"></label>
                    <input asp-for="@VisualizarLancamentoViewModel.DataInicial" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="@VisualizarLancamentoViewModel.DataFinal" class="control-label"></label>
                    <input asp-for="@VisualizarLancamentoViewModel.DataFinal" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="@VisualizarLancamentoViewModel.TipoLancamento" class="control-label"></label>
                    <select asp-for="@VisualizarLancamentoViewModel.TipoLancamento" class="form-control">
                        <option value="@TipoLancamento.TODOS">Todos</option>
                        <option value="@TipoLancamento.DESPESA">Despesa</option>
                        <option value="@TipoLancamento.RECEITA">Receita</option>
                        <option value="@TipoLancamento.TRANSFERENCIA">Transferencia</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="@VisualizarLancamentoViewModel.Conta" class="control-label"></label>
                    <select class="form-control single-select" asp-for="@VisualizarLancamentoViewModel.Conta.Id" asp-items="@(new SelectList(@ViewBag.Conta, "Id", "Nome"))">
                        <option value="0">Todas</option>
                    </select>
                    @*<span asp-validation-for="@VisualizarLancamentoViewModel.Conta.Id" class="text-danger"></span>*@
                </div>
                <div class="form-group col-md-2">
                    <div class="checkbox">
                        <label>
                            <input asp-for="@VisualizarLancamentoViewModel.PendenteVencidos" /> @Html.DisplayNameFor(model => model.PendenteVencidos)
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input asp-for="@VisualizarLancamentoViewModel.ProximoVencer" /> @Html.DisplayNameFor(model => model.ProximoVencer)
                        </label>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <div class="checkbox">
                        <input type="submit" value="Buscar" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
