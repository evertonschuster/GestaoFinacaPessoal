@model IEnumerable<GestaoFinancaPessoal.Models.CPFCNPJ>

@{
    ViewData["Title"] = "Index";
    ViewBag.SemContainer = "Sim";

}
<div class=" col-12 text-center">
    <h2>Favorecidos/Pagadores</h2>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Favorecido/Pagador</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CpfCnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeContato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefones)
            </th>
            <th>
                Endereço
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfCnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeContato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefones)
                </td>
                <td>
                    @(item.Rua.Trim() + " nº " +
                                        item.Numero.Trim() + " " +
                                        item.Bairro.Trim() + " - " +
                                        item.Cidade.Trim() )
                </td>
                <td  >
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td style="width:150px">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
