@model GestaoFinancaPessoal.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Categoria</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Hierarquia" class="control-label"></label>
                    <select class="form-control single-select" name="Hierarquia.Id"
                            asp-for="@Model.Hierarquia.Id"
                            asp-items="@(new SelectList(@ViewBag.Categoria,"Id", "Nome"))" >
                        <option value="0" class="badge-info">[Categoria Master]</option>
                    </select>
                    <span asp-validation-for="Hierarquia.Id" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-2">
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </div>
                <div class="form-group col-md-2">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        var hierarquia = '@Model.Hierarquia'
        if (hierarquia == "") {
            $("#Hierarquia_Id").attr("Disabled", "Disabled");
        } else {
            $("#Hierarquia_Id option[value='0']").remove();
        }


    </script>

}
